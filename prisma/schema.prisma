generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Course {
  id            String   @id @default(cuid())
  title         String
  subject       String
  description   String
  faculty       String
  level         Int
  prerequisites String[]
  unlocks       String[]
}
